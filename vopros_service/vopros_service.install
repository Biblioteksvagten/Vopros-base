        'size' => 'tiny',
        'not null' => TRUE,
        'default' => 0,
      ),
      'log' => array(
        'description' => 'The log entry explaining the changes in this version.',
        'type' => 'text',
        'not null' => TRUE,
        'size' => 'big',
      ),
      'revision_timestamp' => array(
        'description' => 'The Unix timestamp when this revision was created/changed.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('revision_id'),
    'foreign keys' => array(
      'service' => array(
        'table' => 'vopros_service',
        'columns'=> array('service_id' => 'service_id'),
      ),
    ),
  );

  // Not versioned, doesn't really make sense.
  $schema['vopros_service_question'] = array(
    'description' => 'Table for tracking questions forwarded or accepted from others.',
    'fields' => array(
      'machine_name' => array(
        'description' => 'The machine name of the service used.',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
      ),
      'type' => array(
        'description' => 'The type service "incoming_help", "incoming_turn_over" "outgoing_help", "outgoing_turn_over, etc".',
        'type' => 'varchar',
        'length' => '255',
        'not null' => TRUE,
      ),

      'uuid' => uuid_schema_field_definition(),
    ),
    'primary key' => array('uuid', 'type', 'machine_name'),
    'indexes' => array(
      'machine_name' => array('machine_name'),
    ),

  );

  $schema['vopros_service_question']['fields']['uuid']['description'] = 'The UUID of the original question.';

  // Service messages is special in the way that they can only be created, but
  // not edited. The reason is that message is sent to an external service.
  $schema['vopros_service_message'] = array(
    'description' => 'Table for storing vopros service messages, which are a way of communicating between vopros services.',
    'fields' => array(
      'message_id' => array(
        'description' => 'The primary identifier for a vopros service.',
        'type' => 'serial',
        'unsigned' => TRUE,
        'not null' => TRUE,
