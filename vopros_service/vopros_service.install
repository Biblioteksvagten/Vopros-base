        'unsigned' => TRUE,
        'default' => 0,
      ),
      'created' => array(
        'description' => 'The Unix timestamp when the vopros_service was created.',
        'type' => 'int',
        'not null' => TRUE,
        'default' => 0,
      ),
    ),
    'primary key' => array('message_id'),
    'indexes' => array(
      'answer_id' => array('answer_id'),
      'sender_service_id' => array('sender_service_id'),
      'receiver_service_id' => array('receiver_service_id'),
    ),
  );

  return $schema;
}

