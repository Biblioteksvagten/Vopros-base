      'sender_service_id' => array(
        'description' => 'Reference to the {vopros_service}.service_id of the service that sent the message.',
        'type' => 'int',
        'unsigned' => TRUE,
        'default' => 0,
      ),
      'receiver_service_id' => array(
        'description' => 'Reference to the {vopros_service}.service_id of the service that received the message.',
